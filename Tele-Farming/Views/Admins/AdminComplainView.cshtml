@model Tele_Farming.Models.Complain
<!DOCTYPE html>
<html>
<head>
    <title>COMPLAIN VIEW</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/complain_view_style.css">
    <script src="https://kit.fontawesome.com/15fc770d9f.js" crossorigin="anonymous"></script>
</head>
<body>
    <!---Navigation-->
    <div id="parentNav">
        <nav class="navbar navbar-expand-md navbar-dark">
            <div id="main">
                <span onclick="openNav()" class="fas fa-bars"></span>
                <a class="navbar-brand" href="#"><img src="~/images/large.png"></a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarExpandView">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarExpandView">
                <ul class="navbar-nav ml-auto">
                    <li>
                        <a class="nav-link" href="#"><i class="fas fa-user"></i> MIYAD</a>
                    </li>
                    <li>
                        <a class="nav-link" href="#"><i class="fas fa-sign-out-alt"></i> SIGN OUT</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <!---End Navigation-->
    <div id="mySidenav" class="sidenav">

        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/Admins/AdminHome/" class="menuItem"><i class="fas fa-home"></i><span class="mr-2"></span> Home</a>
        <a href="/Admins/AdminJoinRequests/" class="menuItem"><i class="fas fa-user-plus"></i><span class="mr-2"></span> Join Request</a>
        <a href="/Admins/AdminComplains/" class="menuItem active"><i class="fas fa-inbox"></i><span class="mr-2"></span> Complain</a>
    </div>
    <!--End Side Navigation-->
    <!--SideBar--->
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "310px";
        }
        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="row postView mt-5">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 text-center">
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Complain Details</h6>
                                        <label class="postLabel">Subject:</label>
                                        <br>
                                        <label class="postLabelValue">@Model.category</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <label class="postLabel">Issue Date:</label>
                                        <br>
                                        <label class="postLabelValue">@Model.time</label>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Post Details</h6>
                                        <label class="postLabel">Post ID:</label>
                                        <br>
                                        <label class="postLabelValue">@Model.MeetingFailure.Meeting.Post.post_id</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <label class="postLabel">Meeting Time:</label>
                                        <br>
                                        <label class="postLabelValue appointTime">@Model.MeetingFailure.Meeting.meeting_time</label>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Farmer Details</h6>
                                        <label class="postLabel">Name:</label>
                                        <br>
                                        @if (@Model.MeetingFailure.Meeting.Post.Farmer != null)
                                        {<label class="postLabelValue">@Model.MeetingFailure.Meeting.Post.Farmer.name</label>
                                        }
                                        else
                                        {
                                            <label class="postLabelValue">@Model.MeetingFailure.Meeting.Post.FarmerDetails.name</label>
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <label class="postLabel">Contact Number:</label>
                                        <br>
                                        @if (@Model.MeetingFailure.Meeting.Post.Farmer != null)
                                        {<label class="postLabelValue">@Model.MeetingFailure.Meeting.Post.Farmer.contact_number</label>
                                        }
                                        else
                                        {
                                            <label class="postLabelValue">@Model.MeetingFailure.Meeting.Post.FarmerDetails.contact_number</label>
                                        }
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Specialist Details</h6>
                                        <label class="postLabel">Name:</label>
                                        <br>
                                        <label class="postLabelValue">@Model.MeetingFailure.Meeting.Specialist.name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <label class="postLabel">Contact Number:</label>
                                        <br>
                                        <label class="postLabelValue">@Model.MeetingFailure.Meeting.Specialist.contact_number</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-4 text-center">
                                <input type="submit" name="accept" value="DISMISS" class="btn btn-sm cancelBt" onclick="location.href = '/Admins/postStatusUpdate?id=@Model.MeetingFailure.Meeting.Post.post_id&cId=@Model.complain_id&result=Finished';">
                            </div>
                            <div class="col-lg-4 text-center">
                                <input type="submit" name="accept" value="POST AGAIN" class="btn btn-sm acceptBt" onclick="location.href = '/Admins/postStatusUpdate?id=@Model.MeetingFailure.Meeting.Post.post_id&cId=@Model.complain_id&result=Pending';">
                            </div>
                            <div class="col-lg-2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
    <script>
        var modal = document.getElementById("myModal");
        var modalImg = document.getElementById("img01");
        function img(id) {
            modal.style.display = "block";
            modalImg.src = document.getElementById(id).src;
        }
        var span = document.getElementsByClassName("close")[1];
        span.onclick = function () {
            modal.style.display = "none";
        }
    </script>
    <!--  JavaScript -->
    <script src="~/Bootstrap/js/jquery.min.js">
    </script>
    <script src="~/Bootstrap/js/popper.min.js"></script>
    <script src="~/Bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
