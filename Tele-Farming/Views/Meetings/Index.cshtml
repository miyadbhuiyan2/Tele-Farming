@model IEnumerable<Tele_Farming.Models.Meeting>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.meeting_link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.short_message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.meeting_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.meeting_status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specialist.specialist_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.post_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.meeting_link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.short_message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.meeting_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.meeting_status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.meeting_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.meeting_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.meeting_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
