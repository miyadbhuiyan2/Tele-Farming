            else if (month == 1) {
                if ((0 == year % 4) && (0 != year % 100) || (0 == year % 400)) {
                    dayRange = 29;
                }
                else {
                    dayRange = 28;
                }

            }
            else {
                dayRange = 30;
            }
            document.getElementById("monthSpan").value = mon[month];
            document.getElementById("monthSpan2").value = mon[month];
        }
        function dayUpFunc() {
            dFlag = true;
            if ((mFlag == false) && (yFlag == false)) {
                monthDownFunc();
                yearDownFunc();
            }
            day--;
            if (day <= 0) {
                day = dayRange;
            }
            document.getElementById("daySpan").value = day;
            document.getElementById("daySpan2").value = day;
        }
        function yearUpFunc() {
            yFlag = true;
            if ((dFlag == false) && (mFlag == false)) {
                dayDownFunc();
                monthDownFunc();
            }
            year--;
            if (year <= 2020) {
                year = 2021;
            }
            document.getElementById("yearSpan").value = year;
            document.getElementById("yearSpan2").value = year;
        }

        ///////////////////Time////////////////////////////
        var hour = 0, minute = "30", amPm = "PM";
        var hFlag = false, minFlag = false, apFlag = false;
        function hourUpFunc() {
            hFlag = true;
            if ((minFlag == false) && (apFlag == false)) {
                minuteUpFunc();
                ampmUpFunc();
            }
            hour--;
            if (hour <= 0) {
                hour = 12;
            }
            document.getElementById("hourSpan").value = hour;
            document.getElementById("hourSpan2").value = hour;
        }
        function minuteUpFunc() {
            minFlag = true;
            if ((hFlag == false) && (apFlag == false)) {
                hourUpFunc();
                ampmUpFunc();
            }
            if (minute == "00") {
                minute = "30";
            }
            else {
                minute = "00";
            }
            document.getElementById("minuteSpan").value = minute;
            document.getElementById("minuteSpan2").value = minute;
