        var day = 0, month = -1, year = 2020, dayRange = 31;
        var mon = ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG",
            "SEP", "OCT", "NOV", "DEC"];
        var dFlag = false, mFlag = false, yFlag = false;
        function monthDownFunc() {
            mFlag = true;
            if ((dFlag == false) && (yFlag == false)) {
                dayDownFunc();
                yearDownFunc();
            }
            month++;
            if (month == 12) {
                month = 0;
            }
            if (month == 0 || month == 2 || month == 4 || month == 6 || month == 7 || month == 9 || month == 11) {
                dayRange = 31;

            }
            else if (month == 1) {
                if ((0 == year % 4) && (0 != year % 100) || (0 == year % 400)) {
                    dayRange = 29;
                }
                else {
                    dayRange = 28;
                }

            }
            else {
                dayRange = 30;
            }
            document.getElementById("monthSpan").value = mon[month];
