        }
        function dayDownFunc() {
            dFlag = true;
            if ((mFlag == false) && (yFlag == false)) {
                monthDownFunc();
                yearDownFunc();
            }
            day++;
            if (day > dayRange) {
                day = 1;
            }
            document.getElementById("daySpan").value = day;
            document.getElementById("daySpan2").value = day;
        }
        function yearDownFunc() {
            yFlag = true;
            if ((dFlag == false) && (mFlag == false)) {
                dayDownFunc();
                monthDownFunc();
            }
            year++;
            document.getElementById("yearSpan").value = year;
            document.getElementById("yearSpan2").value = year;
        }
        //////////UP//////////////////////////////////////////
        function monthUpFunc() {
            mFlag = true;
            if ((dFlag == false) && (yFlag == false)) {
                dayDownFunc();
                yearDownFunc();
            }
            month--;
            if (month <= -1) {
                month = 11;
            }
            if (month == 0 || month == 2 || month == 4 || month == 6 || month == 7 || month == 9 || month == 11) {
                dayRange = 31;

