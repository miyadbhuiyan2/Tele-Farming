    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

         JavaScript Bundle with Popper
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    -->


    <link rel="stylesheet" href="~/css/Password Reset/password_test.css">
    <!--  <script src="password_test.js" ></script>-->
    <!--  <link rel="stylesheet" href="nav.css">-->
    <!--  <link rel="stylesheet" href="nav.css">-->
</head>
<body>

    <div class="container-fluid">


        <div class="row">

            <div class="col-lg-4"></div>

            <div class="password_reset_form col-lg-4">

                <form asp-controller="Agents" asp-action="SendCode">

                    <div class="form-group">
                        <div>
                            <h4>আপনার অ্যাকাউন্ট ইমেল বা যোগাযোগের নম্বরটিতে একটি কোড প্রেরণ করা হবে</h4>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="" id="enter_detail_form_group_2">
                            <label for="contact_no">Your Tele-Farming Account Contact No:</label>
                            <input asp-for="contact_number" class="form-control" placeholder="Enter Contact No" id="contact_number" name="contact_number">
                            <div class="valid-feedback">বৈধ</div>
                            <div class="invalid-feedback">অনুগ্রহ করে এই ঘরটি পুরন করুন</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="" id="enter_detail_form_group_1">
                            <label for="email">Your Tele-Farming Account Email:</label>
                            <input asp-for="email" type="email" class="form-control" placeholder="Enter Email Address" id="email" name="email">
                            <div class="valid-feedback">বৈধ</div>
                            <div class="invalid-feedback">অনুগ্রহ করে এই ঘরটি পুরন করুন</div>
                        </div>
                    </div>



                    @*<div class="form-group">
                            <div class="" id="enter_code_form_group">
                                <label for="code">Enter the Code</label>
                                <input type="text" class="form-control" placeholder="Enter the Code" id="code" name="code">
                                <div class="valid-feedback">Valid.</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>*@




                    <div class="form-group text-left pt-3">

                        <button class="btn mr-2" id="send_code_email_button" type="button">
                            @*<a asp-controller="Farmers" asp-action="SendCode" asp-route-type="email" >Send Code in Email</a>*@
                            ইমেল কোড প্রেরণ করুন
                        </button>

                        <button class="btn" id="send_code_mobile_button" type="button">
                            @*<a asp-controller="Farmers" asp-action="SendCode" asp-route-type="mobile">Send Code in Mobile</a>*@
                            মোবাইলে কোড প্রেরণ করুন
                        </button>

                        @*<input class="btn" id="send_code_submit_button" type="submit" value="Submit Code">*@

                        <button class="btn" id="send_code_submit_button" type="submit" value="Submit Code">
                            @*<a asp-controller="Farmers" asp-action="SendCode" asp-route-type="mobile">Submit</a>*@
                            জমা দিন
                        </button>

                    </div>




                </form>

            </div>


            <div class="col-lg-4"></div>

        </div>


    </div>

    <script>



        $(document).ready(function () {

            $('#send_code_submit_button').attr('style', 'display: none !important');
            $('#enter_detail_form_group_1').attr('style', 'display: none !important');
            $('#enter_detail_form_group_2').attr('style', 'display: none !important');


            $("#send_code_email_button").click(function () {
                $('#send_code_submit_button').attr('style', 'display: block !important');
                $('#send_code_email_button').attr('style', 'display: none !important');
                $('#send_code_mobile_button').attr('style', 'display: none !important');
                $('#enter_detail_form_group_1').attr('style', 'display: block !important');
            });

            $("#send_code_mobile_button").on('click', (function () {
                $('#send_code_submit_button').attr('style', 'display: block !important');
                $('#send_code_mobile_button').attr('style', 'display: none !important');
                $('#send_code_email_button').attr('style', 'display: none !important');
                $('#enter_detail_form_group_2').attr('style', 'display: block !important');
            }));

        });


    </script>

</body>
</html>