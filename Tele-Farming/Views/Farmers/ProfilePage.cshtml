@model Tele_Farming.Models.Farmer

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/15fc770d9f.js" crossorigin="anonymous"></script>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>


    <link rel="stylesheet" href="~/css/Profile Page/profile_page.css">
    <link rel="stylesheet" href="~/css/Profile Page/side_section.css">
    <link rel="stylesheet" href="~/css/Profile Page/other_section.css">
    <link rel="stylesheet" href="~/css/Profile Page/nav.css">
    <!--  <link rel="stylesheet" href="nav.css">-->
</head>
<body>

    <!---Navigation-->
    <div id="parentNav">
        <nav class="navbar navbar-expand-md navbar-dark">
            <a class="navbar-brand" href="home.php"><img src="~/images/Profile Page/large.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarExpandView">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarExpandView">
                <ul class="navbar-nav ml-auto">

                    <li>
                        <a class="nav-link" asp-controller="Farmers" asp-action="Post" asp-route-id=@Model.farmer_id><i class="fas fa-newspaper"></i> হোম</a>
                    </li>
                    <li>
                        <a class="nav-link profile_image_nav" asp-controller="Farmers" asp-action="ProfilePage" asp-route-id=@Model.farmer_id><i class="fas fa-user"></i> @Model.name </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Farmers" asp-action="SignOutUser" asp-route-id=@Model.farmer_id><i class="fas fa-sign-out-alt"></i> প্রস্থান</a>
                    </li>

                </ul>
            </div>
        </nav>
    </div>
    <!---End Navigation-->

    <div class="container-fluid">


        <div class="row">

            <div class="col-lg-2"></div>

            <div class="col-lg-2 side_section">

                <div class="profile_image">
                    @if (@Model.profile_picture_path == null || @Model.profile_picture_path == "")
                    {
                        <img src="~/image/default.png" alt="">
                    }
                    else
                    {
                        <img src="~/image/@Model.profile_picture_path.ToString()" alt="">
                    }
                </div>

                <div class="select_option">

                    <div class="option">
                        <div class="text"><a href="#user_details"><p>নাম</p></a></div>
                    </div>
                    <div class="option">
                        <div class="text"><a href="#contact_no"><p>যোগাযোগ নম্বর</p></a></div>
                    </div>
                    <div class="option">
                        <div class="text"><a href="#address"><p>ঠিকানা</p></a></div>
                    </div>
                    <div class="option">
                        <div class="text"><a href="#user_image"><p>প্রোফাইলের ছবি</p></a></div>
                    </div>
                    <div class="option">
                        <div class="text"><a href="#change_password"><p>পাসওয়ার্ড পরিবর্তন করুন</p></a></div>
                    </div>

                </div>

            </div>


            <div class="col-lg-6 content_section">

                <form asp-action="ProfilePage" enctype="multipart/form-data">

                    <div class="row" id="user_details">
                        <input type="hidden" asp-for="farmer_id" />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">আপনার নাম:</label>
                                <input type="text" class="form-control" placeholder="আপনার নাম দিন" id="email" asp-for="name">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">ইমেইল ঠিকানা:</label>
                                <input type="email" class="form-control" placeholder="ইমেইল ঠিকানা দিন" id="email" asp-for="email">
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-6" id="contact_no">
                            <div class="form-group">
                                <label for="email">যোগাযোগ নম্বর:</label>
                                <input type="text" class="form-control" placeholder="যোগাযোগ নম্বর দিন" id="email" asp-for="contact_number">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">বিকাশ নম্বর:</label>
                                <input type="text" class="form-control" placeholder="বিকাশ নম্বর দিন" id="email" asp-for="bkash_number">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6" id="user_image">
                            <div class="form-group">
                                <label for="formFile" class="form-label">প্রোফাইলের ছবি পরিবর্তন করুন</label>
                                <input class="form-control" type="file" id="formFile" asp-for="ImageFile" accept="image/*">
                            </div>
                        </div>
                    </div>

                    <div class="row" id="address">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">ঠিকানা:</label>
                                <input type="text" class="form-control" placeholder="ঠিকানা দিন" id="email">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">জিপ কোড:</label>
                                <input type="text" class="form-control" placeholder="জিপ কোড দিন" id="email">
                            </div>
                        </div>
                    </div>

                    <div class="row" id="change_password">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">নতুন পাসওয়ার্ড:</label>
                                <input type="password" class="form-control" placeholder="নতুন পাসওয়ার্ড দিন" id="email" asp-for="password">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="email">পুনরায় নতুন পাসওয়ার্ড:</label>
                                <input type="password" class="form-control" placeholder="পুনরায় নতুন পাসওয়ার্ড দিন" id="email" asp-for="password">
                            </div>
                        </div>
                    </div>

                    <div class="row" id="submit_the_form">
                        <div class="col-lg-6">
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="submit" value="জমা দিন" class="form-control" id="submit_button" placeholder="Confirm New Paswword" id="email">
                            </div>
                        </div>
                    </div>


                </form>

            </div>
            <div class="col-lg-2"></div>


        </div>


    </div>

</body>
</html>