<body>


    <div class="container-fluid">


        <div class="row">

            <div class="col-lg-4"></div>

            <div class="password_reset_form col-lg-4">

                <form asp-action="VerifyCodePasswordReset">


                    <input asp-for="farmer_id" type="hidden" class="form-control" value=@Model.farmer_id>

                    <div class="form-group">

                        <div class="" id="enter_code_form_group">
                            <label for="code">
                                কোডটি লিখুন
                            </label>
                            <input asp-for="PasswordResetCode" type="text" class="form-control" placeholder="Enter the Code" id="PasswordResetCode" name="PasswordResetCode">
                            <div class="valid-feedback">বৈধ</div>
                            <div class="invalid-feedback">অনুগ্রহ করে এই ঘরটি পুরন করুন</div>
                        </div>

                    </div>

                    <div class="form-group text-left pt-3">

                        @*<button class="btn mr-2" id="send_code_email_button" type="button" value="Send Code in Email">
