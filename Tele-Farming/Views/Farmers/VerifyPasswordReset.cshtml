                            </button>

                            <button class="btn" id="send_code_mobile_button" type="button" value="Send Code in Mobile">
                                <a asp-controller="Farmers" asp-action="SendCode" asp-route-type="mobile">Send Code in Mobile</a>
                            </button>*@

                        @*<input class="btn" id="send_code_submit_button" type="submit" value="Submit Code">*@
                        <button class="btn" id="send_code_submit_button" type="submit">
                            জমা দিন
                        </button>

                    </div>




                </form>

            </div>


            <div class="col-lg-4"></div>

        </div>


    </div>


